{
    "name": "pine3ree/pine3ree-reflection",
    "description": "A basic reflection helper",
    "type": "library",
    "keywords": [
        "pine3ree",
        "helper",
        "reflection"
    ],
    "homepage": "https://github.com/pine3ree/pine3ree-reflection",
    "readme": "README.md",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "pine3ree",
            "homepage": "https://github.com/pine3ree",
            "role": "Developer"
        }
    ],
    "support": {
        "docs": "https://github.com/pine3ree/pine3ree-reflection/blob/master/README.md",
        "issues": "https://github.com/pine3ree/pine3ree-reflection/issues",
        "source": "https://github.com/pine3ree/pine3ree-reflection"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "prefer-stable": true,
        "minimum-stability": "dev"
    },
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10 || ^2.0",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpunit/phpunit": "^9.3",
        "squizlabs/php_codesniffer": "^3.5",
        "webimpress/coding-standard": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "pine3ree\\Helper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "pine3ree\\test\\Helper\\": "test/"
        }
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "check-cs": "@phpcs",
        "fix-cs": "@phpcbf",
        "cs-check": "@phpcs",
        "cs-fix": "@phpcbf",
        "phpstan": "phpstan analyze -c phpstan.neon",
        "static-analysis": [
            "@phpstan"
        ],
        "phpunit": "phpunit --colors=always",
        "test": "@phpunit",
        "check": [
            "@phpcs",
            "@static-analysis",
            "@test"
        ],
        "test-coverage": "@test-coverage-clover",
        "test-coverage-clover": "phpunit --colors=always --coverage-clover clover.xml",
        "test-coverage-html": "phpunit --colors=always --coverage-html coverage/html",
        "test-coverage-xml": "phpunit --colors=always --coverage-xml coverage/xml",
        "test-coverage-all": [
            "@test-coverage-html",
            "@test-coverage-xml",
            "@test-coverage-clover"
        ],
        "php-version": "php --version"
    }
}
